
- unless @news.empty?
  %ul
    - for news in @news
      %li
        %section.box
          %h3= news.title
          %small= news.created_at.to_time.to_s(:long)
          %div= simple_format news.content

%section.box
  %div{:style => "width: 640px; margin:auto"}
    <iframe width="640" height="480" src="http://www.youtube.com/embed/hTi4bAFs4ig" frameborder="0" allowfullscreen></iframe>


